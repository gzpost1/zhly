            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
        and deleted = 0
        order by create_time desc
    </select>

    <insert id="insertNotice" parameterType="cn.cuiot.dmp.system.infrastructure.entity.Notice" useGeneratedKeys="true" keyProperty="id">
